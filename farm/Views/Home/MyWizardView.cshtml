
@{
    ViewBag.Title = "MyWizardView";
}

<style>
    <!-- Font Import -->

    * {
        margin: 0; 
        padding:0
    }

    body{
        font-family:  Verdana,Arial, sans-serif;
    }

    html {
        height: 100%;
        /**/
        /*background = gradient + image pattern combo*/
        background: linear-gradient(rgba(196, 102, 0, 0.2), rgba(155, 89, 182, 0.2)), url('http://thecodeplayer.com/uploads/media/gs.png');
    }

    #Wizard_Form_View {
        width: 400px;
        margin: 50px auto;
        text-align: center;
    }

    /*Hide all except first fieldset*/
    #Wizard_Form_View fieldset:not(:first-of-type) {
        display: none;
    }

/*inputs*/
    #Wizard_Form_View input, #Wizard_Form_View textarea {
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 3px;
        margin-bottom: 10px;
        width: 100%;
        box-sizing: border-box;
        color: #2C3E50;
        
    }
    

    fieldset {
        /**/
        background: white;
        border: 0 none;
        border-radius: 3px;
        box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
        padding: 20px 30px;
        box-sizing: border-box;
        width: 80%;
        margin: 0 10%;
    }

    .Form_Title {
        font-size: 20px;
        text-transform: uppercase;
        color:#2C3E50;
        margin-bottom: 10px;
    }
    .Form_subtilte{
        font-weight: normal;
        font-size: 13px;
        color: #666;
        margin-bottom: 20px;
    }

    /*progressbar*/
    #progressbar {
        margin-bottom: 30px;
        overflow: hidden;
        /*CSS counters to number the steps*/
        counter-reset: step;
    }

    #progressbar li {
        list-style-type: none;
        color: Black;
        text-transform: uppercase;
        font-size: 15px;
        width: 33.33%;
        float: left;
        position:relative
    }

    #progressbar li:before {
        content: counter(step);
        counter-increment: step;
        width: 20px;
        line-height: 20px;
        display: block;
        font-size: 10px;
        color: #333;
        background: white;
        border-radius: 3px;
        margin: 0 auto 5px auto;
    }
        #progressbar li:after {
            content: '';
            width: 100%;
            height: 2px;
            background: black;
            position: absolute;
            left: -70%;
            top: 9px;
            z-index: -1; /*put it behind the numbers*/
        }

        #progressbar li:first-child:after {
            /*connector not needed before the first step*/
            content: none;
        }
        /*marking active/completed steps green*/
        /*The number of the step and the connector before it = green*/
        #progressbar li.active:before, #progressbar li.active:after {
            background: #27AE60;
            color: white;
        }
</style>

<br />
<br />
<br />
<br />

